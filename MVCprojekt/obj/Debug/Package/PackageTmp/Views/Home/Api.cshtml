@section scripts {
    @Scripts.Render("~/bundles/app")
}
<div class="page-header">
    <h1>REST API</h1>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Bronie</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: bronie">
                    <li>
                        <strong><span data-bind="text: NazwaSklepy"></span></strong>: <span data-bind="text: NazwaBroni"></span>
                        <!-- New code -->
                        <small><a href="#" data-bind="click: $parent.getBronDetail">Szczegóły</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>
    <!-- ko if:detail() -->
    <div class="col-md-5">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Szczegóły</h2>
            </div>
            <table class="table">
                <tr><td>ID</td><td data-bind="text: detail().BronID"></td></tr>
                <tr><td>Sklep</td><td data-bind="text: detail().NazwaSklepu"></td></tr>
                <tr><td>NazwaBroni</td><td data-bind="text: detail().Nazwa"></td></tr>
                <tr><td>Model</td><td data-bind="text: detail().Model"></td></tr>
                <tr><td>NumerSeryjny</td><td data-bind="text: detail().Numer"></td></tr>
            </table>
        </div>
    </div>
    <!-- /ko -->
    <div class="col-md-5">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Dodaj bron</h2>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addBron">
                    <div class="form-group">
                        <label for="inputSklep" class="col-sm-2 control-label">Sklep</label>
                        <div class="col-sm-10">
                            <select data-bind="options:sklepy, optionsText: 'Nazwa', value: newBron.Sklep"></select>
                        </div>
                    </div>
                    <div class="form-group" data-bind="with: newBron">

                        <label for="inputNazwa" class="col-sm-2 control-label">Nazwa Broni</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputTitle" data-bind="value:Nazwa" placeholder="Nazwa" />
                        </div>

                        <label for="inputModel" class="col-sm-2 control-label">Model</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputModel" data-bind="value:Model" placeholder="Model" />
                        </div>

                        <label for="inputNumer" class="col-sm-2 control-label">Numer</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputNumer" data-bind="value:Numer" placeholder="Numer" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>

</div>

