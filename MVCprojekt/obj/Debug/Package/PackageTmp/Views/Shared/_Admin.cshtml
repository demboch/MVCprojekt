<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body{
            background-color: gray;
            color: red;
        }

        .navbar {
            background-color: black;
        }
    </style>

    <style>
        .field-validation-error {
            color: red;
            font-weight: bold;
        }

        .input-validation-error {
            background-color: pink;
            border: 1px solid red;
        }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GunShop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Lista Broni", "Index", "Bron")</li>
                    <li>@Html.ActionLink("Sklepy", "Index", "Sklep")</li>
                    <li>@Html.ActionLink("Informacje", "About", "Home")</li>
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Role użytkowników", "Index", "Roles")</li>
                    <li>@Html.ActionLink("API", "Api", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="text-center" style="margin-top: 10px; padding-right: 20px; padding-bottom: 10px">
            @Html.ActionLink("Dodaj broń", "Create", "Bron", null, new { @class = "btn btn-danger" })
            @Html.ActionLink("Dodaj sklep", "Create", "Sklep", null, new { @class = "btn btn-danger" })
            @Html.ActionLink("Dodaj rolę", "Create", "Roles", null, new { @class = "btn btn-danger" })
        </div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @ViewBag.Title</p>
            <p>Liczba odwiedzin strony: @ApplicationInstance.Application["Visited"] </p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
