<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body{
            background-color:lightgray;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Strona główna", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Biblioteki", "Index", "Libraries")</li>
                    <li>@Html.ActionLink("Książki", "Index", "Books")</li>
                    <li>@Html.ActionLink("Role użytkowników", "Index", "Roles")</li>
                    <li>@Html.ActionLink("API", "API", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="text-center">
            @Html.ActionLink("Dodaj książkę", "Create", "Books", null, new { @class = "btn btn-primary" })
            @Html.ActionLink("Dodaj bibliotekę", "Create", "Libraries", null, new { @class = "btn btn-primary" })
            @Html.ActionLink("Dodaj rolę", "Create", "Roles", null, new { @class = "btn btn-primary" })
        </div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @ViewBag.Title</p>
            <p>Liczba odwiedzin strony: @ApplicationInstance.Application["Visited"] </p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
